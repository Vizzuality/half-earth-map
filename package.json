  "description": "An awesome project",
  "main": "webpack.config.js",
  "scripts": {
    "start": "./node_modules/.bin/webpack-dev-server --hot --progress --colors",
    "build": "./node_modules/.bin/webpack --progress --colors",
    "publish": "./node_modules/.bin/babel-node ./publish.js",
    "test": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vizzuality/half-earth.git"
  },
  "author": "David Inga <david.inga@vizzuality.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Vizzuality/half-earth/issues"
  },
  "homepage": "https://github.com/Vizzuality/half-earth#readme",
  "dependencies": {
    "leaflet": "^0.7.7",
    "normalize.css": "^3.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-cli": "^6.6.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.6.0",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "file-loader": "^0.8.5",
    "gh-pages": "^0.11.0",
    "html-loader": "^0.4.3",
    "postcss-hexrgba": "^0.2.0",
    "postcss-import": "^8.0.2",
    "postcss-loader": "^0.8.1",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^1.2.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "vue": "^1.0.17",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "xo": "^0.12.1"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "quote-props": 0,
      "no-new": 0,
      "new-cap": 0,
      "no-negated-condition": 0,
      "no-unused-vars": 0
    },
    "ignores": [
      "dist/**"
    ],
    "envs": [
      "browser"
    ],
    "globals": [
      "after",
      "beforeEach",
      "before",
      "describe",
      "it"
    ]
  }
}
